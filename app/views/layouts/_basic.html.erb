<%# The user provided description of the autopsy %>

<div class="row">
  <div id="user_provided_id" class="col-sm-12 patient-well well-sm vertical-align">
    <div class="col-sm-10">
      <h3 class="text-left"><%= @description.case_identifier %></h1>
      <p><%= @description.description.html_safe %></p>
    </div>
    <div class="col-sm-2">
      <% if (can? :update, @description) or (can? :update_description_through_special_report, @description) %>
        <%= link_to 'Edit', edit_description_path(@description), class: 'btn btn-primary' %> 
      <% end %>
    </div>
  </div>
</div>

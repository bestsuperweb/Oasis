<div class="panel panel-primary">
        <div class="panel-heading">
           <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#Esophagus">Esophagus</a>
           </h4>
        </div>
      <div id="Esophagus" class="panel-collapse collapse in"> 
<div class="row" style="width:100%">
		   <div class="col-sm-6 drop-down">
		      <%= f.label  :esophagus_size_position_configuration %><br>
		      <%= f.select :esophagus_size_position_configuration, [:Normal, :Abnormal], { :prompt => "Select One" },{ class: "form-control" , onchange: "myFunction(this,'Abnormal')"} %> 
		   </div>

		   <div class="col-sm-6">
		   <% if !@description.internal.nil?  %>
		    <% if @description.internal.esophagus_size_position_configuration == "Abnormal" %>
		      <%= f.label  :please_specify, { id:"label_internal_esophagus_size_position_configuration_specify" } %><br>
		      <%= f.text_field :esophagus_size_position_configuration_specify, { class: "form-control", placeholder: "If Abnormal, explain" } %>
		    <% else %>
		      <%= f.label  :please_specify, { id:"label_internal_esophagus_size_position_configuration_specify" } %><br>
		      <%= f.text_field :esophagus_size_position_configuration_specify, { class: "form-control", placeholder: "If Abnormal, explain" , disabled: true } %>
		    <% end %>
		    <% else %>
		      <%= f.label  :please_specify, { id:"label_internal_esophagus_size_position_configuration_specify" } %><br>
		      <%= f.text_field :esophagus_size_position_configuration_specify, { class: "form-control", placeholder: "If Abnormal, explain" , disabled: true } %>
		   <% end %>
		  </div>
		</div>
      
<div class="row" style="width:100%">
		   <div class="col-sm-6 drop-down">
		      <%= f.label  :esophagus_mucosa_and_wall %><br>
		      <%= f.select :esophagus_mucosa_and_wall, [:Normal, :Abnormal], { :prompt => "Select One" },{ class: "form-control" , onchange: "myFunction(this,'Abnormal')"} %> 
		   </div>

		   <div class="col-sm-6">
		   <% if !@description.internal.nil?  %>
		    <% if @description.internal.esophagus_mucosa_and_wall == "Abnormal" %>
		      <%= f.label  :please_specify, { id:"label_internal_esophagus_mucosa_and_wall_specify" } %><br>
		      <%= f.text_field :esophagus_mucosa_and_wall_specify, { class: "form-control", placeholder: "If Abnormal, explain" } %>
		    <% else %>
		      <%= f.label  :please_specify, { id:"label_internal_esophagus_mucosa_and_wall_specify" } %><br>
		      <%= f.text_field :esophagus_mucosa_and_wall_specify, { class: "form-control", placeholder: "If Abnormal, explain" , disabled: true } %>
		    <% end %>
		    <% else %>
		      <%= f.label  :please_specify, { id:"label_internal_esophagus_mucosa_and_wall_specify" } %><br>
		      <%= f.text_field :esophagus_mucosa_and_wall_specify, { class: "form-control", placeholder: "If Abnormal, explain" , disabled: true } %>
		   <% end %>
		  </div>
		</div>
      
</div>
</div>

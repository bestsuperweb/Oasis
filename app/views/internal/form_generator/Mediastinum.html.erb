<div class="panel panel-primary">
        <div class="panel-heading">
           <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#Mediastinum">Mediastinum</a>
           </h4>
        </div>
      <div id="Mediastinum" class="panel-collapse collapse in"> 
<div class="row" style="width:100%">
		   <div class="col-sm-6 drop-down">
		      <%= f.label  :mediastinum_position_configuration %><br>
		      <%= f.select :mediastinum_position_configuration, [:Normal, :Abnormal], { :prompt => "Select One" },{ class: "form-control" , onchange: "myFunction(this,'Abnormal')"} %> 
		   </div>

		   <div class="col-sm-6">
		   <% if !@description.internal.nil?  %>
		    <% if @description.internal.mediastinum_position_configuration == "Abnormal" %>
		      <%= f.label  :please_specify, { id:"label_internal_mediastinum_position_configuration_specify" } %><br>
		      <%= f.text_field :mediastinum_position_configuration_specify, { class: "form-control", placeholder: "If Abnormal, explain" } %>
		    <% else %>
		      <%= f.label  :please_specify, { id:"label_internal_mediastinum_position_configuration_specify" } %><br>
		      <%= f.text_field :mediastinum_position_configuration_specify, { class: "form-control", placeholder: "If Abnormal, explain" , disabled: true } %>
		    <% end %>
		    <% else %>
		      <%= f.label  :please_specify, { id:"label_internal_mediastinum_position_configuration_specify" } %><br>
		      <%= f.text_field :mediastinum_position_configuration_specify, { class: "form-control", placeholder: "If Abnormal, explain" , disabled: true } %>
		   <% end %>
		  </div>
		</div>
      
<div class="row" style="width:100%">
		   <div class="col-sm-6 drop-down">
		      <%= f.label  :mediastinum_nodes_masses %><br>
		      <%= f.select :mediastinum_nodes_masses, [:Normal, :Abnormal], { :prompt => "Select One" },{ class: "form-control" , onchange: "myFunction(this,'Abnormal')"} %> 
		   </div>

		   <div class="col-sm-6">
		   <% if !@description.internal.nil?  %>
		    <% if @description.internal.mediastinum_nodes_masses == "Abnormal" %>
		      <%= f.label  :please_specify, { id:"label_internal_mediastinum_nodes_masses_specify" } %><br>
		      <%= f.text_field :mediastinum_nodes_masses_specify, { class: "form-control", placeholder: "If Abnormal, explain" } %>
		    <% else %>
		      <%= f.label  :please_specify, { id:"label_internal_mediastinum_nodes_masses_specify" } %><br>
		      <%= f.text_field :mediastinum_nodes_masses_specify, { class: "form-control", placeholder: "If Abnormal, explain" , disabled: true } %>
		    <% end %>
		    <% else %>
		      <%= f.label  :please_specify, { id:"label_internal_mediastinum_nodes_masses_specify" } %><br>
		      <%= f.text_field :mediastinum_nodes_masses_specify, { class: "form-control", placeholder: "If Abnormal, explain" , disabled: true } %>
		   <% end %>
		  </div>
		</div>
      
 <div class="row" style="width:100%">
		  <div class="col-sm-4 drop-down">
		     <%= f.label  :pneumomediastinum %><br>
		     <%= f.select :pneumomediastinum, [:yes, :no], { :prompt => "Select One" },{ class: "form-control"} %>
		 </div> 
		 </div>

	     <div class="row" style="width:100%">
		<div class="field col-sm-4">
		    <%= f.label :mediastinum_other %><br>
		    <%= f.text_field :mediastinum_other, class: "form-control" %>
	     </div> </div>
</div>
</div>

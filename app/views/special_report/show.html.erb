<div id="loginModal" class="modal fade" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>        
                <h4 class="modal-title">Log in for Sign out</h4>
              </div>
         <!-- form start -->
              <%= form_for :sign_out, url: edit_special_report_path(@description.id, @special_report.id), method: :get do |d|%>
               <div class="modal-body form-horizontal">
                <div class="form-group">
                  <label class="control-label col-sm-3" >Email:</label>
                  <div class="col-sm-9">
                    <%= d.email_field :email, :class => 'form-control', :required => 'true' %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-sm-3" >Password:</label>
                  <div class="col-sm-9">
                    <%= d.password_field :password, :class => 'form-control', :required => 'true' %>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary" >Login</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              </div>
              <% end %>
        <!-- form end -->
            </div>
          </div>
